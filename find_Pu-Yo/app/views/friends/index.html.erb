<h3>Hello <%= @user.nick_name %> !!</h3>
<p>--------recommended friends ranking-------------</p>
<table border="1">
	<tr><td>Nick name</td><td># mutual friends</td></tr>
	<% @counter.each do | key, value |%>
	<% u = User.find_by_uid(key) %>

	<tr>
	<% if u.has_profile_image == 1 %>
      <% if u.avatar == nil %>
	    <% image = "http://avatars.plurk.com/" + key.to_s + "-medium.gif" %>
	  <% else %>
	    <% image = "http://avatars.plurk.com/" + key.to_s + "-medium.gif" + u.avatar %>
	  <% end %>
	<% else %>
	  <% image = "http://www.plurk.com/static/default_medium.gif" %>
    <% end %>
	<td><a href="<%= profile_url %>"><img src="<%= image %>" /></a></td>
	<td rowspan="2"><%= value %></td>
  </tr>
  <tr>
    <td><a href="<%= profile_url %>"><%= u.nick_name %></a></td>
  </tr>
	<% end %>
</table>
<p>-----------good friends ranking----------</p>
<table border="1">
	<tr><td>Nick name</td><td># mutual friends</td></tr>
	<% @counter2.each do | key, value |%>
	<% u = User.find_by_uid(key) %>
